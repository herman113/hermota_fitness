<!----------------Login Page---------------------->
<!--login GET    /login(.:format)   sessions#new-->

<div class="container" id="signup">
  
  <div class="row">
    <div class="col-xs-12">
      <h1 class="logotop">HERMOTA</h1>
      <h1 class="logobottom">FITNESS</h1>
    </div>
  </div><!--hermota fitness text logo-->
  
  <h1 class="signuptitle" align="center">Log in</h1><!--login text title-->
  
  <div class='row'><!--login form sessions_controller-->
    <div class='col-xs-12'>
      <%= form_for(:session, :html => {class: "form-horizontal",role: "form"},
                    url: login_path) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
          </div>
        </div><!--email-->
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div><!--password-->
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
          </div>
        </div><!--submit login-->
      <% end %>
    </div><!--col-->
  </div><!--login form sessions_controller-->
  
  <div class='row'>
    <div class='col-xs-12'> 
      <div class="col-xs-4 col-xs-offset-4 center">
        [ <%= link_to "Cancel request and return to users listing", users_path %> ]
      </div>
    </div><!--col-->
  </div><!--cancel login return to root-->
    
</div><!--container-->