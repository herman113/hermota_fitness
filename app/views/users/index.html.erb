<div align="center">
  <h1><%= @users.count %> Users</h1>
  
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <!--<li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li><%= link_to user.username, user_path(user) %></li>-->
          <li><%= gravatar_for(user) %></li>
          <li><%= user.username %></li>
          <% if logged_in? and current_user.admin? %>
          <li id="delete-btn" ><%= link_to "Delete this user", user_path(user), method: :delete,
                           data: {confirm: "Are you sure you want to delete this user?"},
                           class: "btn btn-lg btn-danger" %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>

